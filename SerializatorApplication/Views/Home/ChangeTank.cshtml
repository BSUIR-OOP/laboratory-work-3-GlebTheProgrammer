@using SerializatorApplication.Characters
@model Tank

<h1>Change</h1>
<hr />

<div class="row">
    <div class="col-6">

        <div class="card" style="display: inline-block">

            <div class="card-header">
                <h5>Change Tank Info</h5>
            </div>

            <div class="card-body">
                <form asp-controller="Home" asp-action="SaveTankChanges">
                    <div class="mb-3">
                        <label class="form-label">Character Name</label>
                        <input asp-for=Name value=@Model.Name type="text" required minlength=3 class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Character Hp</label>
                        <input asp-for=Hp value=@Model.Hp type="number" required min=1 max=1000 class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Character Damage</label>
                        <input asp-for=Dmg value=@Model.Dmg type="number" required min=1 max=100 class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Character Strength</label>
                        <input asp-for=Strength value=@Model.Strength type="number" required min=1 max=100 class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Character Defence</label>
                        <input asp-for=Defence value=@Model.Defence type="number" required min=1 max=100 class="form-control" />
                    </div>

                    <div>
                        <button type="submit" value=@Context.Request.Query["index"] name="index" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>

            <div class="card-footer">
            </div>

        </div>

    </div>
</div>
